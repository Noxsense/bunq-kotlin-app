<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:animateLayoutChanges="true"
	android:padding="10sp"
	android:orientation="vertical"
	tools:context=".MainActivity"
	>

	<TextView
		android:id="@+id/title"
		android:text="@string/title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="35sp"
		/>

	<TextView
		android:id="@+id/description"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginVertical="20sp"
		android:text="Hello ${user}, here you see your latest payments. You also can make a new payment here."
		android:layout_marginTop="20sp"
		/>

	<EditText
		android:id="@+id/new_payment"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Make a new Payment here"
		android:inputType="number"
		/>

	<Button
		android:id="@+id/confirm"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="20sp"
		android:text="Confirm your payment here!"
		/>

	<ListView
		android:id="@+id/list_payments"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="20sp"
		/>
	
</LinearLayout>
