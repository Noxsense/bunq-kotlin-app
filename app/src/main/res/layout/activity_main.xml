<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:animateLayoutChanges="true"
  android:padding="10sp"
  android:orientation="vertical"
  >
  <!-- Overview of the last payments.-->
  <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="0sp"
    android:layout_weight="0.10"
    android:layout_margin="@dimen/default_margin"
    >
    <TextView
      android:id="@+id/greeting"
      android:gravity="left"
      android:text="@string/greeting"
      android:textStyle="bold"
      android:textSize="@dimen/TextSizeH1"
      android:textColor="@color/bunq_c00"
      android:padding="10dp"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      />
    <TextView
      android:id="@+id/change"
      android:gravity="right"
      android:text="@string/change"
      android:textStyle="italic"
      android:alpha="0.5"
      android:textSize="@dimen/TextSizeH1"
      android:textColor="@color/bunq_c00"
      android:padding="10dp"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      />
  </LinearLayout>
  <TextView
    android:id="@+id/balances_view"
    android:gravity="center_vertical"
    android:text="@string/balances_view"
    android:padding="10dp"
    android:textColor="@color/TextColorPrimary"
    android:layout_width="match_parent"
    android:layout_height="0sp"
    android:layout_weight="0.10"
    android:layout_margin="@dimen/default_margin"
    android:background="@drawable/roundly_bordered_bunq_c03"
    />
  <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="0sp"
    android:layout_weight="0.66"
    android:layout_margin="@dimen/default_margin"
    android:background="@drawable/roundly_bordered_bunq_c05"
    >
    <ListView
      android:id="@+id/list_payments"
      android:padding="@dimen/default_padding"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="@dimen/default_margin"
      />
  </LinearLayout>
  <TextView
    android:id="@+id/list_payments_refresh"
    android:gravity="center"
    android:text="@string/list_payments_refresh"
    android:alpha="0.9"
    android:textSize="@dimen/TextSizePrimary"
    android:textStyle="bold"
    android:textColor="@color/bunq_c05"
    android:layout_width="match_parent"
    android:layout_height="0sp"
    android:layout_weight="0.04"
    android:layout_margin="3dp"
    />
  <Button
    android:id="@+id/new_payment_button"
    android:gravity="center"
    android:text="@string/new_payment_button"
    android:textStyle="bold"
    android:layout_width="match_parent"
    android:layout_height="0sp"
    android:layout_weight="0.10"
    android:layout_margin="@dimen/default_margin"
    android:textColor="@color/bunq_c11"
    android:background="@drawable/roundly_bordered_bunq_c11"
    />
</LinearLayout>
